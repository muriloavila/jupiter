<%= render 'shared/errors', obj: @task %>


<%= form_with(model: @task, local: true, url: project_tasks_path) do |form| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :nome, 'Título:' %>
      <%= form.text_field :nome, class: 'form-control form-control-sm' %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :status_id, 'Status:' %>
      <%= form.collection_select(:status_id, Status.all, :id, :nome_status, {prompt: "-- Status --"}, {class: 'form-control form-control-sm text-center'}) %>
    </div>
    <div class="form-group">
      <%= form.label :commit_hash, 'Hash Commit:' %>
      <%= form.text_field :commit_hash, class: 'form-control form-control-sm' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :descricao, 'Descrição:' %>
    <%= form.text_area :descricao, class: 'form-control form-control-sm', rows: '7' %>
  </div>
  <div class="form-group text-center">
    <%= form.submit 'Criar Tarefa', class: 'mt-4 btn btn-dark border border-white' %>
  </div>
<% end %>