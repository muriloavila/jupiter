<%= link_to project_task_path(@project, task), class: 'text-decoration-none',action: 'go' do %>
<div class="card bg-dark mt-2 border-secondary rounded-3 text-white">
  <div class="card-body rounded-3">
    <h5 class="card-title" style="font-weight: bold"><%= task.nome %></h5>
    <p class="card-text"><%= task.descricao %></p>
    <h6 class="card-subtitle mb-2 text-muted" style="font-size: 12px;"><%= task.created_at.strftime("%d/%m/%Y %H:%M:%S") %></h6>
  </div>
</div>
<% end %>